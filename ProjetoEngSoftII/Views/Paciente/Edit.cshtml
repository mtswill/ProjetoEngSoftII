@using ProjetoEngSoftII.Models.Enderecos;

@model ProjetoEngSoftII.Models.Paciente

@{
    ViewData["Title"] = "Editar";
    var estados = Estados.GetListEstados();
}

<h1>Editar</h1>

<h4>Paciente</h4>
<hr />

@if (Model.Equals(null))
{
    <div class="row">
        <h4>Não foi possível buscar as informações do paciente.</h4>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Cns" class="control-label"></label>
                    <input asp-for="Cns" class="form-control" />
                    <span asp-validation-for="Cns" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input readonly asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rg" class="control-label"></label>
                    <input readonly asp-for="Rg" class="form-control" />
                    <span asp-validation-for="Rg" class="text-danger"></span>
                </div>
                <br />
                <h4>Endereço</h4>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EnderecoId" />
                        <input type="hidden" asp-for="Endereco.Id" />
                        <div class="col-md-12 form-group">
                            <label asp-for="Endereco.Cep" class="control-label"></label>
                            <input asp-for="Endereco.Cep" class="form-control" />
                            <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Endereco.Logradouro" class="control-label"></label>
                            <input asp-for="Endereco.Logradouro" class="form-control" />
                            <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Endereco.Bairro" class="control-label"></label>
                            <input asp-for="Endereco.Bairro" class="form-control" />
                            <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Endereco.Numero" class="control-label"></label>
                            <input asp-for="Endereco.Numero" class="form-control" />
                            <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Endereco.Cidade" class="control-label"></label>
                            <input asp-for="Endereco.Cidade" class="form-control" />
                            <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Endereco.Descricao" class="control-label"></label>
                            <input asp-for="Endereco.Descricao" class="form-control" />
                            <span asp-validation-for="Endereco.Descricao" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Endereco.Estado" class="control-label"></label>
                            <select asp-for="Endereco.Estado" asp-items="@(new SelectList(estados))" class="form-control"></select>
                            <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
