@model ProjetoEngSoftII.Models.Vacinas.Vacinador

@{
    ViewData["Title"] = "Cadastrar Vacinador";
}

<h1>Cadastrar Vacinador</h1>

<h4>Vacinador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarVacinador">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistroProfissional" class="control-label"></label>
                <input asp-for="RegistroProfissional" class="form-control" />
                <span asp-validation-for="RegistroProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexVacinadores">Listar vacinadores</a>
</div>
<div>
    <a asp-action="Index">Menu Covid-19</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
