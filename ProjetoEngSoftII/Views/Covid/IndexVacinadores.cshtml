@model IEnumerable<ProjetoEngSoftII.Models.Vacinas.Vacinador>

@{
    ViewData["Title"] = "Vacinadores";
}

<h1>Vacinadores</h1>

<p>
    <a asp-action="CadastrarVacinador">Cadastrar vacinador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistroProfissional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegistroProfissional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="EditarVacinador" asp-route-registroProfissional="@item.RegistroProfissional">Editar</a> |
                <a asp-action="DeletarVacinador" asp-route-registroProfissional="@item.RegistroProfissional">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index">Voltar</a>
</div>
