@{
    ViewData["Title"] = "Covid";
}


<div class="text-center">
    <h1 class="display-4">Covid-19</h1>
</div>

<div class="col-md-12">
    <div class="row">
        <div class="col-md-5">
            <div class="row">
                <fieldset class="col-md-12" style="border: 1px solid black;">
                    <legend style="font-size: 20px; text-align: center;"> Área do paciente </legend>
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <a asp-action="IndexVacinados">
                                <input type="button" value="Listar Vacinados" class="btn btn-primary" />
                            </a>
                        </div>
                        <div class="col-md-6 text-center">
                            <a asp-action="InserirVacinado">
                                <input type="button" value="Inserir Vacinado" class="btn btn-primary" />
                            </a>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <div class="row">
                <fieldset class="col-md-12" style="border: 1px solid black;">
                    <legend style="font-size: 20px; text-align: center;"> Área do vacinador </legend>
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <a asp-action="IndexVacinadores">
                                <input type="button" value="Listar Vacinadores" class="btn btn-primary" />
                            </a>
                        </div>
                        <div class="col-md-6 text-center">
                            <a asp-action="CadastrarVacinador">
                                <input type="button" value="Cadastrar Vacinador" class="btn btn-primary" />
                            </a>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
